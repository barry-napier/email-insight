# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=./data/email-insight.db

# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Security Configuration
# Generate random 32+ character strings for these
JWT_SECRET=generate_random_32_char_string_here_for_jwt_signing
ENCRYPTION_KEY=generate_another_32_char_string_here_for_encryption

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Optional: Gmail Push Notifications (Pub/Sub)
# PUBSUB_TOPIC=projects/your-project/topics/gmail-updates

# Frontend Environment Variables (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001/api