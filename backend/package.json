{
  "name": "@email-insight/backend",
  "version": "1.0.0",
  "description": "Hono API server for Email Insight",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect=9229 --clear-screen=false src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:init": "tsx src/db/init.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:console": "sqlite3 ../data/email-insight.db",
    "db:types": "drizzle-kit introspect:sqlite --out=src/db/generated --schema=src/db/schema.ts",
    "db:generate": "drizzle-kit generate:sqlite --out=src/db/migrations --schema=src/db/schema.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@email-insight/shared": "*",
    "hono": "^4.5.3",
    "@hono/node-server": "^1.12.0",
    "drizzle-orm": "^0.32.0",
    "better-sqlite3": "^11.1.2",
    "zod": "^3.23.8",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "google-auth-library": "^9.11.0",
    "googleapis": "^140.0.1",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^5.0.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcrypt": "^5.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/crypto-js": "^4.2.2",
    "typescript": "^5.5.4",
    "tsx": "^4.16.2",
    "tsc-alias": "^1.8.10",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "vitest": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.4",
    "drizzle-kit": "^0.23.0"
  }
}