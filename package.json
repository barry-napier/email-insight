{
  "name": "email-insight",
  "version": "1.0.0",
  "description": "Gmail analytics and subscription management application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm-run-all build:*",
    "build:shared": "npm run build --workspace=shared",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "type-check": "npm-run-all type-check:*",
    "type-check:shared": "npm run type-check --workspace=shared",
    "type-check:backend": "npm run type-check --workspace=backend",
    "type-check:frontend": "npm run type-check --workspace=frontend",
    "lint": "npm-run-all lint:*",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:fix": "npm-run-all lint:fix:*",
    "lint:fix:backend": "npm run lint:fix --workspace=backend",
    "lint:fix:frontend": "npm run lint:fix --workspace=frontend",
    "test": "npm-run-all test:*",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspace=backend",
    "db:init": "npm run db:init --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:reset": "npm run db:reset --workspace=backend",
    "db:console": "npm run db:console --workspace=backend",
    "db:types": "npm run db:types --workspace=backend",
    "clean": "npm-run-all clean:*",
    "clean:backend": "npm run clean --workspace=backend",
    "clean:frontend": "npm run clean --workspace=frontend",
    "clean:shared": "npm run clean --workspace=shared",
    "start": "npm run start --workspace=backend",
    "postinstall": "npm run build:shared"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@types/node": "^20.14.12",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "email",
    "analytics",
    "gmail",
    "subscription-management",
    "typescript",
    "hono",
    "nextjs"
  ],
  "author": "Email Insight Team",
  "license": "MIT"
}